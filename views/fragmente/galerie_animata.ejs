<section id="galerie-animata">
    <h2>Galerie Animata</h2>
    <div id="galerie2" class="galerie">
        <div class="grid_2col">
            <% 
            var data_filter = locals.imagini.filter( element => element.cale_imagine.length < 12)
            for (let imag of data_filter){

                %>

                <figure>
                    <picture>
                        <!-- il ia pe primul care se potriveste cu query-ul din media-->
                        <source srcset="/<%- imag.mic%>" media="(max-width:700px)"/>
                        <source srcset="/<%- imag.med%>" media="(max-width:900px)"/>
                        <img src="/<%- imag.mare %>" alt="text"/>
                    </picture>
                    <figcaption><%-imag.titlu%></figcaption>
                </figure>
            <% } %>
        </div>
    </div>
</section>